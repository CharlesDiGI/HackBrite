<p>Créer un user (et pourquoi pas?)</p>
<%= link_to "Créer un user", new_admin_user_path, class:"btn btn-success" %>
</br></br>

<p>Voici la liste de tous les users du site</p>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Edit user", edit_admin_user_path(user)  %> / 
            <%= link_to "Show user", admin_user_path(user) %> / 
            <%= link_to "Delete User", admin_user_path(user), method: :delete, data: {confirm: "Are you sure?"}  %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', admin_root_path, class: "btn btn-outline-dark" %>
