<% if @event.errors.any? %>
 <div class="alert alert-danger" role="alert">
   <p>Event creation process failed due to:</p>
     <ul>
     <% @event.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
 </div>
<% end %>


<h1>New Event</h1>

<%= render 'form', event: @event %>

</br>
<%= link_to 'Back', events_path %>




