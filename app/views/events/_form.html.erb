<%= form_with(model: event, local: true, multipart: true) do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

  <% end %>

  <div class="form-row">
    <div class="field form-group col-3">
      <%= form.label :start_date %>
      <%= form.datetime_field :start_date, class: 'form-control' %>
    </div>
    <div class="field form-group col-2">
      <%= form.label "Duration (in minutes)" %>
      <%= form.number_field :duration, :step => 5, class: 'form-control' %>
    </div>
    <div class="field form-group col-4">
      <%= form.label :location %>
      <%= form.text_field :location, class: 'form-control' %>
    </div>
    <div class="field form-group col-3">
      <%= form.label :price %>
      <%= form.number_field :price, within: 1...1000, class: 'form-control' %>
    </div>
    
    </div>

  <div class="form-row">
    <div class="field form-group col-3">
      <%= form.label :title %>
      <%= form.text_area :title, class: 'form-control' %>
    </div>
    <div class="field form-group col-9">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>


  </div>



  <div class="field form-group">
    <%= form.label :event_pic %>
    <%= form.file_field :event_pic, class: 'form-control' %>
  </div>

<% if false %>
  <div class="field">
    <%= form.label :administrator %>
    <%= form.collection_select :user_id, User.order(:first_name),:id,:first_name, include_blank: true %>
  </div>
<% end %>


  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>

<% end %>



