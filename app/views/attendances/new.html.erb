
<%= form_tag event_attendances_path(params[:event_id]), :method => :post do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>

    <label class="amount">
      <span class="lora-regular">
        <h2>Pour rejoindre l'évènement <strong><%= @event.title %></strong>, merci de payer:</h2>
      </span><br/>
      	<span class="display-1"><%= @event.price %> €</span>
    </label>
  </article>

		  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
		          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
		          data-description="A month's subscription"
		          data-amount="<%= @event.price * 100 %>"
		          data-locale="auto">
		  </script>
<% end %>

</br></br></br>